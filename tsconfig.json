{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist",
    "target": "es6",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve", 
    "lib": ["esnext", "dom", "dom.iterable"],
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "typings/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ],
  "exclude": [
    "example/**/*"
  ]
}
